[mysqld]
character-set-server=utf8mb4
collation-server     = utf8mb4_0900_ai_ci
sql_mode             = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ZERO_DATE,NO_ZERO_IN_DATE,ONLY_FULL_GROUP_BY,NO_ENGINE_SUBSTITUTION
default_storage_engine = InnoDB

# タイムゾーン
default-time-zone = UTC
log_timestamps = UTC

# クエリログ
general_log = 1

# スロークエリログ
slow_query_log = 1
long_query_time = 0.1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set=utf8mb4

[mysqldump]
default-character-set = utf8mb4
